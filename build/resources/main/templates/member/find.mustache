    <h3 class="page-title">아이디/비밀번호 찾기</h3>

    <div class="tab-menu">
        <button class="tab active" data-tab="find-id">아이디 찾기</button>
        <button class="tab" data-tab="find-password">비밀번호 찾기</button>
    </div>

    <div class="tab-content">
        <!-- 아이디 찾기 -->
        <div id="find-id" class="tab-panel active">
            <div class="find-table">
                <input type="text" name="name" placeholder="이름을 입력해주세요."/>
                <input type="email" name="email" placeholder="이메일"/>
            </div>
            <button class="btn-find">아이디 찾기</button>
        </div>

        <!-- 비밀번호 찾기 -->
        <div id="find-password" class="tab-panel">
            <div class="find-table">
                <input type="text" name="memberId" id="pw-memberId" placeholder="아이디"/>
                <input type="text" name="name" id="pw-name" placeholder="이름"/>
                <div class="input-group">
                    <input type="email" name="email" id="pw-email" placeholder="이메일"/>
                    <button type="button" class="auth-btn" id="pw-send-code" disabled>인증번호 전송</button>
                </div>

                <!-- 인증번호 입력 영역 (처음엔 숨김) -->
                <div class="input-group hidden" id="pw-auth-area">
                    <input type="text" id="pw-authCode" placeholder="인증번호 입력" name="authCode">
                    <div class="auth-box">
                        <button type="button" class="auth-btn" id="pw-resendBtn">재전송</button>
                        <button type="button" class="auth-btn" id="pw-verifyBtn">인증 확인</button>
                        <span class="inline-timer" id="pw-timer">05:00</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- 아이디 찾기 결과 모달 -->
<div class="modal-overlay hidden" id="idResultModal">
    <div class="modal">
        <div class="modal-header">
            <span>알림</span>
            <button class="modal-close">&times;</button>
        </div>
        <div class="modal-body">
            <p id="resultIdText"></p>
            <p>가입일 : <span id="resultJoinDate"></span></p>
        </div>
        <div class="modal-footer">
            <button class="btn-confirm">확인</button>
        </div>
    </div>
</div>
<!-- 비밀번호 재설정 모달 -->
<div class="modal-overlay hidden" id="pwResetModal">
    <div class="modal">
        <div class="modal-header">
            <span>비밀번호 재설정</span>
            <button class="modal-close">&times;</button>
        </div>
        <form id="pwResetForm">
            <div class="modal-body">
                <input type="password" name="newPassword" placeholder="새 비밀번호 입력" required />
                <input type="password" name="confirmPassword" placeholder="비밀번호 확인" required />
                <input type="hidden" name="memberId" id="pwResetMemberId">
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn-confirm">비밀번호 변경</button>
            </div>
        </form>
    </div>
</div>

